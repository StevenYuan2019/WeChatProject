/**index.wxss**/
.container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.logn-back{
width:100%;
height:100%;
position:absolute;
top:0;left:0;
z-index:-1;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  padding-bottom: 20px;
  color: #fff;
}
.weui-input {
  padding-top: 15px;
  height: 2em;
  text-align: center;
  min-height: 2em;
  line-height: 2em;
  border-bottom: 1px #fff solid;
  font-size: 14px;
  color: #fff;
}
.phcolor {
  color: #fff;
}
.btn-area {
  margin-top: 30px;
  font-size: 18px;
  color:#fff;
  border-radius: 30px;
  line-height: 40px;
  background-image: linear-gradient(90deg, #FDA302, #F95701 );
}
.tip {
  color:#8391a5;
  position:absolute;
  top:30px;
  width:  160px;
  line-height:40px;
  padding: 0 10px;
  font-size: 16px;
}