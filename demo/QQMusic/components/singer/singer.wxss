/* components/singer/singer.wxss */
.listview{
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
  /* background: $color-background */
}
.list-group{
  padding-bottom: 30px
}    

.list-group-item{
  display: flex;
  align-items: center;
  padding: 20px 0 0 30px;
  
}

.list-fixed{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}
.fixed-title{
  height: 30px;
  line-height: 30px;
  padding-left: 20px;
  font-size:14px;
  /* color: $color-text-l
  background: $color-highlight-background */
}
.loading-container{
  position: absolute;
  width: 100%;
  top: 50%;
  transform: translateY(-50%);
}

.media{
  align-items: center;
  padding: 10px 20px;
  border-bottom: 1px #eee solid;
}
.img{
  width: 50px;
  height: 50px;
  border-radius: 50%;
  vertical-align:middle;
  display:inline-block;
}
.name{
  margin-left: 20px;
  font-size: 14px;
  align-items: center;
  vertical-align:middle;
  display:inline-block;
}
.list-group-title{
  display:inline-block;
  padding-left: 10px;
  height: 30px;
  width:100%;
  line-height: 30px;
  font-size: 14px;
  background: #eee;
  /* color: $color-text-l
  background: $color-highlight-background */
}
.list-shortcut{
  position: fixed;
  z-index: 30;
  right: 0;
  top: 45%;
  transform: translateY(-50%);
  width: 20px;
  padding: 20px 0;
  border-radius: 10px;
  font-size: 12px;
  text-align: center;
  background: #eee;
  font-family: Helvetica;
  color:#31c27c;
}